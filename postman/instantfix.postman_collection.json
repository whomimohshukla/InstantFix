  "item": [
    {
      "name": "Health",
      "item": [
        { "name": "Service Up", "request": { "method": "GET", "url": "{{base_url}}/health" } },
        { "name": "DB Up", "request": { "method": "GET", "url": "{{base_url}}/health/db" } }
      ]
    },
    {
      "name": "Authorization",
      "item": [
        {
          "name": "Signup (role optional)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/signup",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret#123\",\n  \"name\": \"User\",\n  \"phone\": \"+911234567890\",\n  \"role\": \"CUSTOMER\"\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {"type":"text/javascript","exec":[
              "pm.test('Status is 201 or 409', function () { pm.expect([201,409]).to.include(pm.response.code); });",
              "if (pm.response.code === 201) { const json = pm.response.json(); pm.expect(json.ok).to.eql(true); }"
            ]}
          }]
        },
        {
          "name": "Verify Email OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/verify-otp",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\"\n}" }
          },
          "event": [{"listen":"test","script":{"type":"text/javascript","exec":[
            "pm.test('Status is 200 or 400', function () { pm.expect([200,400]).to.include(pm.response.code); });"
          ]}}]
        },
        {
          "name": "Resend Email OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/resend-otp",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\"\n}" }
          },
          "event": [{"listen":"test","script":{"type":"text/javascript","exec":[
            "pm.test('Status is 200 or 429', function () { pm.expect([200,429]).to.include(pm.response.code); });"
          ]}}]
        },
        {
          "name": "Login (email/password, optional role)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/login",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret#123\",\n  \"role\": \"CUSTOMER\"\n}" }
          },
          "event": [{"listen":"test","script":{"type":"text/javascript","exec":[
            "pm.test('Login status is 200 or 401 or 403', function () { pm.expect([200,401,403]).to.include(pm.response.code); });",
            "if (pm.response.code === 200) { const json = pm.response.json(); pm.environment.set('token', json.token); pm.test('Token saved', function () { pm.expect(!!json.token).to.eql(true); }); }"
          ]}}]
        },
        {
          "name": "Availability (email/phone)",
          "request": { "method": "GET", "url": "{{base_url}}/auth/availability?email=user@example.com&phone=%2B911234567890" }
        },
        {
          "name": "Phone: Customer Signup (phone only)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/phone/customer-signup",
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+911234567890\",\n  \"name\": \"Rahul\"\n}" }
          }
        },
        {
          "name": "Phone: Send OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/phone/send-otp",
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+911234567890\"\n}" }
          },
          "event": [{"listen":"test","script":{"type":"text/javascript","exec":[
            "pm.test('Status is 200 or 404', function () { pm.expect([200,404]).to.include(pm.response.code); });"
          ]}}]
        },
        {
          "name": "Phone: Verify OTP (returns JWT)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/phone/verify-otp",
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+911234567890\",\n  \"otp\": \"123456\"\n}" }
          },
          "event": [{"listen":"test","script":{"type":"text/javascript","exec":[
            "pm.test('Status is 200 or 400 or 404', function () { pm.expect([200,400,404]).to.include(pm.response.code); });",
            "if (pm.response.code === 200) { const json = pm.response.json(); pm.environment.set('token', json.token); }"
          ]}}]
        },
        {
          "name": "Phone: Resend OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/phone/resend-otp",
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+911234567890\"\n}" }
          },
          "event": [{"listen":"test","script":{"type":"text/javascript","exec":[
            "pm.test('Status is 200 or 429', function () { pm.expect([200,429]).to.include(pm.response.code); });"
          ]}}]
        }
      ]
    },
